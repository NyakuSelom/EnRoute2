@model EnRouteTicketing.Models.Ticket

@{
    ViewBag.Title = "Buy";
}

<h2>Buy</h2>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.Label("From")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartTerminal.Location)
        </dd>

        <dt>
            @Html.Label("Destination")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArriveTerminal.Location)
        </dd>

        <dt>
            @Html.Label("Bus")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bus.LicenseNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BusService.ServiceName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BusService.ServiceName)
        </dd>



        <dt>
            @Html.Label("Travel Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TravelDate)
        </dd>

        <dt>
            @Html.Label("Departure Time");
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>



    </dl>
</div>

@using (Html.BeginForm("Buy", "Ticket", FormMethod.Post))
{
    <div class="form-group">
        <span class="flabel">
            @Html.Label("Select Your Prefared Seat Number")
        </span>
        <input type="hidden" name="phone"  value="@ViewBag.phone">
        <div class="col-md-10">
            @Html.DropDownList("ticketid", (SelectList)ViewData["SelectedTicket"], "Select Seat No", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Buy Now." class="btn btn-success" />
        </div>
    </div>
}



